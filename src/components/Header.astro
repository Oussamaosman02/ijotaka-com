---
export interface Props {
  made: string;
  tech: boolean;
}

const { tech, made } = Astro.props;
---

<header class='header'>
  <h1>
    IJK<span>A</span>
  </h1>
  <div>
    <h3 class={tech ? 'active' : 'inactive'}>
      <a href='/technologies'>Tools</a>
    </h3>
    <h3 class={made === 'active' ? 'inactive' : 'active'}>
      <a href='/'>
        Your
        <span>web</span> agency
      </a>
    </h3>
    <h3 class={made}>
      <a href='/clients'>Clients</a>
    </h3>
  </div>
</header>
<style>
  .header {
    background-color: #80808080;
    overflow: hidden;
  }
  .header h1,
  .header h2,
  .header h3 {
    text-align: center;
  }
  .header span {
    color: #bd8b28;
    text-shadow: 0 0 1px #ffd700;
  }
  .header div {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-evenly;
    margin-bottom: 0px;
    align-items: baseline;
  }
  .header div h3 {
    position: relative;
    top: 2px;
  }
  .header .inactive {
    border-top-right-radius: 15px;
    border-top-left-radius: 15px;
    padding: 3px 5px;
    background-color: #fff3;
  }
  .header .active {
    border-top-right-radius: 15px;
    border-top-left-radius: 15px;
    padding: 3px 5px;
    background-color: #fffa;
    font-size: 1.3em;
  }
  .active:nth-child(odd) {
    color: #bd8b28;
    text-shadow: 0 0 1px #ffd700;
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background: #333;
      color: #f5f5f5;
    }
    .header .inactive {
      background-color: #6666;
    }
    .header .active {
      background-color: #aaab;
    }
  }
  .active:nth-child(odd) {
    color: #bd8b2888;
    text-shadow: 0 0 1px #ffd700ee;
  }
</style>
